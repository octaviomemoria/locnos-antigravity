# Ambiente
ENVIRONMENT=development

# Servidor
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Supabase / PostgreSQL
DATABASE_URL=postgresql://postgres:[SUA-SENHA]@db.[SEU-PROJETO].supabase.co:5432/postgres

# Supabase (opcional para Storage/Auth)
SUPABASE_URL=https://[SEU-PROJETO].supabase.co
SUPABASE_KEY=sua_anon_key_aqui
SUPABASE_SERVICE_KEY=sua_service_role_key_aqui

# JWT
SECRET_KEY=sua_chave_secreta_super_segura_aqui_mude_em_producao_use_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 dias
REFRESH_TOKEN_EXPIRE_MINUTES=43200  # 30 dias

# CORS (URLs permitidas)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8000"]

# Redis (para caching e Celery)
REDIS_URL=redis://localhost:6379/0

# Celery (tasks ass√≠ncronas)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (exemplo com Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app
EMAILS_FROM_EMAIL=noreply@locnos.com.br
EMAILS_FROM_NAME=Locnos

# Supabase Storage (para uploads)
STORAGE_BUCKET=equipamentos
USE_SUPABASE_STORAGE=true

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=seu_access_token_aqui
MERCADOPAGO_PUBLIC_KEY=seu_public_key_aqui
MERCADOPAGO_WEBHOOK_SECRET=seu_webhook_secret

# NF-e / NFS-e (eNotas ou similar)
ENOTAS_API_KEY=sua_api_key_aqui
ENOTAS_COMPANY_ID=seu_company_id_aqui
ENOTAS_ENABLED=false

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=seu_account_sid
TWILIO_AUTH_TOKEN=seu_auth_token
TWILIO_PHONE=+5511999999999

# Logs
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Upload
MAX_UPLOAD_SIZE=10485760  # 10MB em bytes

# Admin
FIRST_SUPERUSER_EMAIL=admin@locnos.com.br
FIRST_SUPERUSER_PASSWORD=admin123
FIRST_SUPERUSER_NAME=Super Admin

# Multi-tenancy
DEFAULT_TENANT=locnos
ENABLE_MULTI_TENANT=true
