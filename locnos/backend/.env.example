# Ambiente
NODE_ENV=development

# Servidor
PORT=5000
API_URL=http://localhost:5000

# Supabase / PostgreSQL
# Obtenha estes valores em: https://supabase.com/dashboard/project/_/settings/database
DATABASE_URL="postgresql://postgres:[SUA-SENHA]@db.[SEU-PROJETO].supabase.co:5432/postgres"

# Supabase Auth (opcional, se quiser usar auth do Supabase)
SUPABASE_URL=https://[SEU-PROJETO].supabase.co
SUPABASE_ANON_KEY=sua_anon_key_aqui
SUPABASE_SERVICE_ROLE_KEY=sua_service_role_key_aqui

# JWT (para autenticação customizada)
JWT_SECRET=sua_chave_secreta_super_segura_aqui_mude_em_producao
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=sua_refresh_token_secret_aqui
JWT_REFRESH_EXPIRE=30d

# URLs Frontend (CORS)
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Upload de Arquivos
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
# Ou use Supabase Storage:
USE_SUPABASE_STORAGE=true
SUPABASE_STORAGE_BUCKET=equipamentos

# Email (Nodemailer - exemplo com Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_app
EMAIL_FROM=Locnos <noreply@locnos.com.br>

# Mercado Pago (sandbox para testes)
MERCADOPAGO_ACCESS_TOKEN=seu_access_token_aqui
MERCADOPAGO_PUBLIC_KEY=seu_public_key_aqui

# Notas Fiscais (eNotas.com.br ou similar)
ENOTAS_API_KEY=sua_api_key_aqui
ENOTAS_COMPANY_ID=seu_company_id_aqui
ENOTAS_ENABLED=false

# SMS/WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=seu_account_sid
TWILIO_AUTH_TOKEN=seu_auth_token
TWILIO_PHONE_NUMBER=+5511999999999

# Segurança
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
